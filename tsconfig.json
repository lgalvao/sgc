{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["e2e/*"]
    },
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noEmit": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["node", "@playwright/test"]
  },
  "include": ["e2e/**/*.ts"],
  "exclude": ["frontend", "backend", "node_modules", "dist", "build"]
}
