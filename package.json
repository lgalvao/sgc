{
  "name": "sgc",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.ts --fix",
    "typecheck": "vue-tsc --noEmit --skipLibCheck",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "coverage": "npm run coverage:unit && npm run coverage:e2e",
    "coverage:unit": "vitest run --coverage",
    "coverage:unit:watch": "vitest --coverage",
    "coverage:e2e": "cross-env COLLECT_COVERAGE=true playwright test",
    "coverage:clean": "rimraf coverage .nyc_output .nyc_output_unit .nyc_output_e2e",
    "screenshots:clean": "node scripts/clean-screenshots.js",
    "screenshots:clean-and-test": "npm run screenshots:clean && npm run test:e2e",
    "coverage:report": "npm run coverage:unit && echo 'Coverage report generated in coverage/ directory'"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "date-fns": "^4.1.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@playwright/test": "^1.55.1",
    "@types/bootstrap": "^5.2.10",
    "@types/node": "^24.6.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/typescript-plugin": "^3.1.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-vue": "^10.5.0",
    "jsdom": "^27.0.0",
    "nyc": "^17.1.0",
    "playwright": "^1.55.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vite-plugin-istanbul": "^7.2.0",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.1.0"
  }
}
