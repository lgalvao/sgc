{
  "name": "sgc-e2e",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "npm test --prefix frontend",
    "test:e2e": "playwright test",
    "test:e2e:captura": "playwright test e2e/captura-telas.spec.ts",
    "test:e2e:captura:headed": "playwright test e2e/captura-telas.spec.ts --headed",
    "test:e2e:captura:ui": "playwright test e2e/captura-telas.spec.ts --ui",
    "check:accessibility": "node frontend/etc/scripts/verificar-acessibilidade.js",
    "typecheck": "npm run typecheck --prefix frontend && npm run typecheck:e2e",
    "typecheck:e2e": "tsc --noEmit -p e2e/tsconfig.json",
    "lint": "npm run lint --prefix frontend"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.2",
    "@vitest/browser-preview": "^4.0.18",
    "chrome-launcher": "^1.2.1",
    "lighthouse": "^13.0.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "description": "Testes E2E",
  "dependencies": {
    "xml2js": "^0.6.2"
  }
}
