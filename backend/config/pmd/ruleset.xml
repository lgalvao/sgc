<?xml version="1.0"?>
<ruleset name="SGC Ruleset"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">

    <description>
        Custom PMD ruleset for SGC project.
    </description>

    <!-- Best Practices -->
    <rule ref="category/java/bestpractices.xml">
        <exclude name="GuardLogStatement"/> <!-- We use modern loggers with placeholders or simple checks -->
        <exclude name="AbstractClassWithoutAbstractMethod"/> <!-- Common for Base Events / Entity classes -->
    </rule>

    <!-- Code Style -->
    <rule ref="category/java/codestyle.xml">
        <exclude name="AtLeastOneConstructor"/>
        <exclude name="LocalVariableCouldBeFinal"/>
        <exclude name="MethodArgumentCouldBeFinal"/>
        <exclude name="OnlyOneReturn"/>
        <exclude name="ControlStatementBraces"/> <!-- Checkstyle handles this -->
        <exclude name="ShortClassName"/> <!-- Disabled per user request for Sgc class -->
        <exclude name="UseExplicitTypes"/> <!-- We use var -->
        <exclude name="FieldDeclarationsShouldBeAtStartOfClass"/> <!-- Flexible ordering -->
        <exclude name="MethodNamingConventions"/> <!-- Allows underscores in Spring Data JPA queries -->
        <exclude name="TooManyStaticImports"/> <!-- Common in modern Java/Tests -->
        <exclude name="UnnecessaryFullyQualifiedName"/> <!-- IDE handles this, PMD often conflicts -->
    </rule>

    <rule ref="category/java/codestyle.xml/LongVariable">
        <properties>
            <property name="minimum" value="50"/>
        </properties>
    </rule>

    <rule ref="category/java/codestyle.xml/ShortVariable">
        <properties>
            <property name="minimum" value="2"/> <!-- Allow single char for loops/lambdas -->
        </properties>
    </rule>

    <rule ref="category/java/codestyle.xml/ShortMethodName">
        <properties>
            <property name="minimum" value="2"/> <!-- Allow factory methods like 'of' -->
        </properties>
    </rule>

    <!-- Design -->
    <rule ref="category/java/design.xml">
        <exclude name="LawOfDemeter"/>
        <exclude name="LoosePackageCoupling"/>
        <exclude name="DataClass"/>
        <exclude name="AvoidCatchingGenericException"/> <!-- Common in global handlers or wrappers -->
        <exclude name="ExcessiveImports"/> <!-- Spring Services naturally have many imports -->
        <exclude name="CouplingBetweenObjects"/> <!-- Spring Services naturally are coupled -->
        <exclude name="UseUtilityClass"/> <!-- Spring beans often look like utility classes -->
        <exclude name="CyclomaticComplexity"/> <!-- Often high in validation logic, prefer review over hard limit -->
        <exclude name="CognitiveComplexity"/> <!-- Same as above -->
        <exclude name="TooManyMethods"/> <!-- Services can be large -->
        <exclude name="NPathComplexity"/>
        <exclude name="UseObjectForClearerAPI"/> <!-- Often false positive for simple service methods with 3-4 string args -->
    </rule>

    <!-- Error Prone -->
    <rule ref="category/java/errorprone.xml">
        <exclude name="MissingSerialVersionUID"/> <!-- JPA Entities / DTOs often don't need this -->
        <exclude name="AvoidDuplicateLiterals"/> <!-- Noisy for constants/test data -->
        <exclude name="NullAssignment"/> <!-- Valid in some logic flows -->
    </rule>

    <!-- Multithreading -->
    <rule ref="category/java/multithreading.xml">
        <exclude name="UseConcurrentHashMap"/> <!-- False positives on local variables -->
        <exclude name="DoNotUseThreads"/> <!-- We use @Async -->
    </rule>

    <!-- Performance -->
    <rule ref="category/java/performance.xml">
        <exclude name="AvoidInstantiatingObjectsInLoops"/> <!-- Sometimes necessary for DTO mapping -->
    </rule>

    <!-- Security -->
    <rule ref="category/java/security.xml"/>
</ruleset>
